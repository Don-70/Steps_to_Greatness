    <section>
        <div class="container">
            <div class="list">
    <h2>Edit Goal Page</h2>
    <form action="/goals/<%= goal.id %>?_method=PUT" method="POST">
        <label>Title:
            <%=goal.title%>
        </label><br>
        <label>Step One:
            <input type="text" name="Step1" value="<%=goal.Step1%>">
        </label><br>
        <label>Step Two:
            <input type="text" name="Step2" value="<%=goal.Step2%>">
         </label><br>
         <label>Step Three:
            <input type="text" name="Step3" value="<%=goal.Step3%>">
        </label><br>
        <input type="submit" value="Update This Goal">
    </form>
